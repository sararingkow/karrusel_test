---
import Buttons from "../components/Buttons.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/style.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="shortcut icon" href="public/svg/logo_footer.svg" type="image/svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" />
    <title>Home</title>
  </head>
  <body>
    <Header />
    <main>
      <div class="container">
        <img src="public/webp/frontpage_image.webp" alt="front-page image" />
        <div class="centered">
          <h1>KARRUSEL FESTIVAL</h1>
          <br />
          <p>3 days of house, disco and techno in the woods.</p>
          <br />
          <br />
          <Buttons>BUY TICKETS</Buttons>
          <Buttons>GO TO LINEUP</Buttons>
        </div>
      </div>
      <div class="info_boxes">
        <div class="info_box1">
          <img src="public/webp/section_image1.webp" alt="section image" />
          <h2>PROGRAM</h2>
          <br />
          <Buttons>GO TO PROGRAM..</Buttons>
        </div>
        <div class="info_box2">
          <img src="public/webp/section_image2.webp" alt="section image" />
          <h2>ABOUT US</h2>
          <br />
          <Buttons>LEARN MORE..</Buttons>
        </div>
        <div class="info_box3">
          <img src="public/webp/section_image3.webp" alt="section image" />
          <h2>GALLERY</h2>
          <br />
          <Buttons>GO TO GALLERY..</Buttons>
        </div>
      </div>
      <Footer />
    </main>
  </body>

  <style>
    .container img {
      height: 350px;
      width: 100%;
      object-fit: cover;
      filter: brightness(15%) contrast(100%) sepia(70%);
    }

    .centered {
      text-align: center;
      color: #ffffff;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -145%);
    }

    .centered h1 {
      background-image: url(../public/webp/mask_image.webp);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      --webkit-background-repeat: no-repeat;
      background-size: cover;
    }

    .info_boxes {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      margin: 35px;
    }

    .info_box1 img,
    .info_box2 img,
    .info_box3 img {
      height: 250px;
      width: 70%;
      object-fit: cover;
      border-radius: 10px;
      filter: brightness(110%) contrast(100%);
    }

    .info_box1,
    .info_box2,
    .info_box3 {
      display: grid;
      text-align: center;
      justify-items: center;
      color: #f2f2f2;
    }

    h2 {
      font-family: "Amarante";
      font-size: 30px;
    }
  </style>
</html>
